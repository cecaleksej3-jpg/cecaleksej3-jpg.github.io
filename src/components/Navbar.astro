<!-- –ö–Ω–æ–ø–∫–∞ –¥–ª—è —Ä–∞–∑–≤–æ—Ä–∞—á–∏–≤–∞–Ω–∏—è navbar –∫–æ–≥–¥–∞ –æ–Ω —Å–≤–µ—Ä–Ω—É—Ç -->
<button class="show-navbar" id="show-navbar" aria-label="–ü–æ–∫–∞–∑–∞—Ç—å —à–∞–ø–∫—É" title="–ü–æ–∫–∞–∑–∞—Ç—å —à–∞–ø–∫—É" style="display: none;">‚ñº</button>

<script>
  // –ü–æ–ª—É—á–∞–µ–º —ç–ª–µ–º–µ–Ω—Ç—ã –¥–ª—è —Ä–∞–±–æ—Ç—ã —Å –º–µ–Ω—é
  const hamburger = document.getElementById('hamburger');
  const sidebar = document.getElementById('sidebar');
  const navbar = document.getElementById('navbar');
  const toggleNavbar = document.getElementById('toggle-navbar');
  const showNavbar = document.getElementById('show-navbar');
  const mapContainer = document.querySelector('.map-container');
  
  // –û–±—Ä–∞–±–æ—Ç–∫–∞ —Å–≤–æ—Ä–∞—á–∏–≤–∞–Ω–∏—è/—Ä–∞–∑–≤–æ—Ä–∞—á–∏–≤–∞–Ω–∏—è navbar
  if (navbar && toggleNavbar && showNavbar && mapContainer) {
    toggleNavbar.addEventListener('click', (e) => {
      e.stopPropagation();
      navbar.classList.add('hidden');
      showNavbar.style.display = 'flex';
      mapContainer.classList.add('fullscreen');
    });

    showNavbar.addEventListener('click', () => {
      navbar.classList.remove('hidden');
      showNavbar.style.display = 'none';
      mapContainer.classList.remove('fullscreen');
    });
  }
  
  if (hamburger && sidebar) {
    // –ü—Ä–∏ –∫–ª–∏–∫–µ –Ω–∞ –∫–Ω–æ–ø–∫—É –º–µ–Ω—é –ø–µ—Ä–µ–∫–ª—é—á–∞–µ–º –∫–ª–∞—Å—Å 'open' —É –±–æ–∫–æ–≤–æ–π –ø–∞–Ω–µ–ª–∏
    hamburger.addEventListener('click', () => {
      sidebar.classList.toggle('open');
    });

    // –ó–∞–∫—Ä—ã–≤–∞–µ–º –±–æ–∫–æ–≤—É—é –ø–∞–Ω–µ–ª—å –µ—Å–ª–∏ –∫–ª–∏–∫–Ω—É–ª–∏ –≤–Ω–µ –µ—ë –æ–±–ª–∞—Å—Ç–∏
    document.addEventListener('click', (e) => {
      const target = e.target as Node;
      if (!sidebar.contains(target) && !hamburger.contains(target)) {
        sidebar.classList.remove('open');
      }
    });
  }
</script>
