      // –û–±—Ä–∞–±–æ—Ç–∫–∞ –ø—Ä–∏–≤–µ—Ç—Å—Ç–≤–µ–Ω–Ω–æ–≥–æ —ç–∫—Ä–∞–Ω–∞
      // –ñ–¥–µ–º –ø–æ–ª–Ω–æ–π –∑–∞–≥—Ä—É–∑–∫–∏ —Å—Ç—Ä–∞–Ω–∏—Ü—ã
      window.addEventListener('DOMContentLoaded', () => {
        const splashScreen = document.getElementById('splash-screen');
        const splashButton = document.getElementById('splash-button');
        const infoBadge = document.getElementById('info-badge');
        const infoBadgeClose = document.getElementById('info-badge-close');
        
        if (splashScreen && splashButton) {
          // –ë–ª–æ–∫–∏—Ä—É–µ–º —Å–≤–∞–π–ø—ã –Ω–∞ splash screen —á—Ç–æ–±—ã –Ω–µ –≤–∑–∞–∏–º–æ–¥–µ–π—Å—Ç–≤–æ–≤–∞—Ç—å —Å –∫–∞—Ä—Ç–æ–π
          splashScreen.addEventListener('touchstart', (e) => {
            e.stopPropagation();
          }, { passive: false });
          
          splashScreen.addEventListener('touchmove', (e) => {
            e.stopPropagation();
            e.preventDefault();
          }, { passive: false });
          
          // –ü—Ä–∏ –∫–ª–∏–∫–µ –Ω–∞ –∫–Ω–æ–ø–∫—É –∑–∞–ø—É—Å–∫–∞–µ–º –∞–Ω–∏–º–∞—Ü–∏—é —Å–∫—Ä—ã—Ç–∏—è
          splashButton.addEventListener('click', () => {
            splashScreen.classList.add('fade-out');
            
            // –£–±–∏—Ä–∞–µ–º —ç–ª–µ–º–µ–Ω—Ç –∏–∑ DOM –ø–æ—Å–ª–µ –∑–∞–≤–µ—Ä—à–µ–Ω–∏—è –∞–Ω–∏–º–∞—Ü–∏–∏ (1 —Å–µ–∫—É–Ω–¥–∞)
            setTimeout(() => {
              splashScreen.style.display = 'none';
            }, 1000);
          });
        }

        // –û–±—Ä–∞–±–æ—Ç–∫–∞ –∑–∞–∫—Ä—ã—Ç–∏—è –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–æ–Ω–Ω–æ–π –ø–ª–∞—à–∫–∏
        if (infoBadge && infoBadgeClose) {
          infoBadgeClose.addEventListener('click', () => {
            infoBadge.classList.add('fade-out');
            setTimeout(() => {
              infoBadge.style.display = 'none';
            }, 300);
          });
        }
      });

      // –û—Å–Ω–æ–≤–Ω–∞—è —Ñ—É–Ω–∫—Ü–∏—è –¥–ª—è –∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏–∏ –∫–∞—Ä—Ç—ã
      async function initializeMap() {
        // –ü–æ–¥–≥—Ä—É–∂–∞–µ–º –±–∏–±–ª–∏–æ—Ç–µ–∫—É Leaflet –¥–∏–Ω–∞–º–∏—á–µ—Å–∫–∏
        const L = (await import('leaflet')).default;
        
        // –°–æ–∑–¥–∞–µ–º –∫–∞—Ä—Ç—É —Å —Ü–µ–Ω—Ç—Ä–æ–º –Ω–∞ –ú–æ—Å–∫–≤–µ –∏ –º–∞—Å—à—Ç–∞–±–æ–º 4
        // –ö–æ–æ—Ä–¥–∏–Ω–∞—Ç—ã: —à–∏—Ä–æ—Ç–∞ 55.7558, –¥–æ–ª–≥–æ—Ç–∞ 37.6173
        const map = L.map('map').setView([55.7558, 37.6173], 4);
        
        // –î–æ–±–∞–≤–ª—è–µ–º —Å–ª–æ–π OpenStreetMap (–±–µ—Å–ø–ª–∞—Ç–Ω—ã–µ –∫–∞—Ä—Ç—ã)
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
          attribution: '¬© OpenStreetMap contributors',
          maxZoom: 19,
        }).addTo(map);
        
        // –§—É–Ω–∫—Ü–∏—è –≤–æ–∑–≤—Ä–∞—â–∞–µ—Ç –ø—É—Ç—å –∫ –∏–∫–æ–Ω–∫–µ –º–∞—Ä–∫–µ—Ä–∞ –≤ –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–∏ –æ—Ç —Ç–∏–ø–∞ —Å–æ–±—ã—Ç–∏—è
        // –¢–∏–ø—ã: default (–æ–±—ã—á–Ω–æ–µ), death (—Å–º–µ—Ä—Ç—å), good (–ø–æ–ª–æ–∂–∏—Ç–µ–ª—å–Ω–æ–µ)
        function getIconUrl(type) {
          const icons = {
            'default': '/assets/icons/marker-default.svg',
            'death': '/assets/icons/marker-death.svg',
            'good': '/assets/icons/marker-good.svg'
          };
          // –ï—Å–ª–∏ —Ç–∏–ø –Ω–µ –Ω–∞–π–¥–µ–Ω, –≤–æ–∑–≤—Ä–∞—â–∞–µ–º –∏–∫–æ–Ω–∫—É –ø–æ —É–º–æ–ª—á–∞–Ω–∏—é
          return icons[type] || icons['default'];
        }
        
        // –°–æ–∑–¥–∞–Ω–∏–µ –∫–∞—Å—Ç–æ–º–Ω–æ–π –∏–∫–æ–Ω–∫–∏ –¥–ª—è –º–∞—Ä–∫–µ—Ä–∞
        function createCustomIcon(type) {
          return L.icon({
            iconUrl: getIconUrl(type),
            iconSize: [32, 40],        // –†–∞–∑–º–µ—Ä –∏–∫–æ–Ω–∫–∏
            iconAnchor: [16, 40],       // –¢–æ—á–∫–∞ –ø—Ä–∏–≤—è–∑–∫–∏ –∫ –∫–æ–æ—Ä–¥–∏–Ω–∞—Ç–∞–º
            popupAnchor: [0, -40],      // –°–º–µ—â–µ–Ω–∏–µ –≤—Å–ø–ª—ã–≤–∞—é—â–µ–≥–æ –æ–∫–Ω–∞
            className: `marker-${type}` // CSS –∫–ª–∞—Å—Å –¥–ª—è –¥–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω–æ–π —Å—Ç–∏–ª–∏–∑–∞—Ü–∏–∏
          });
        }
        
        // –ó–∞–≥—Ä—É–∂–∞–µ–º –¥–∞–Ω–Ω—ã–µ –æ —Ç–æ—á–∫–∞—Ö –∏–∑ JSON —Ñ–∞–π–ª–∞
        try {
          const response = await fetch('/data/points.json');
          const data = await response.json();
          
          // –ü—Ä–æ–≤–µ—Ä—è–µ–º —á—Ç–æ –¥–∞–Ω–Ω—ã–µ –∑–∞–≥—Ä—É–∑–∏–ª–∏—Å—å –∫–æ—Ä—Ä–µ–∫—Ç–Ω–æ
          if (data.points && Array.isArray(data.points)) {
            // –ü—Ä–æ—Ö–æ–¥–∏–º –ø–æ –∫–∞–∂–¥–æ–π —Ç–æ—á–∫–µ –∏ —Å–æ–∑–¥–∞–µ–º –º–∞—Ä–∫–µ—Ä
            data.points.forEach(point => {
              const marker = L.marker(
                [point.lat, point.lng],
                { icon: createCustomIcon(point.type || 'default') }
              ).addTo(map);
              
              // –§–æ—Ä–º–∏—Ä—É–µ–º HTML –∫–æ–Ω—Ç–µ–Ω—Ç –¥–ª—è –≤—Å–ø–ª—ã–≤–∞—é—â–µ–≥–æ –æ–∫–Ω–∞ (popup)
              // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –Ω–∞–∑–≤–∞–Ω–∏–µ, –¥–∞—Ç—É, —Ü–∏—Ç–∞—Ç—É, –∫–æ–Ω—Ç–µ–∫—Å—Ç –∏ –∞–≤—Ç–æ—Ä–∞
              const popupContent = `
                <div class="marker-popup">
                  <h3>${point.title}</h3>
                  <div class="date">${new Date(point.date).toLocaleDateString('ru-RU')}</div>
                  <div class="quote">"${point.quote}"</div>
                  <div class="context">${point.context}</div>
                  <div class="author">
                    ‚Äî <a href="${point.author_link}" target="_blank">${point.author}</a>
                  </div>
                </div>
              `;
              
              // –ü—Ä–∏–≤—è–∑—ã–≤–∞–µ–º popup –∫ –º–∞—Ä–∫–µ—Ä—É
              marker.bindPopup(popupContent, {
                maxWidth: 300,
                className: 'popup-custom'
              });
            });
          }
        } catch (error) {
          // –í—ã–≤–æ–¥–∏–º –æ—à–∏–±–∫—É –≤ –∫–æ–Ω—Å–æ–ª—å –µ—Å–ª–∏ –Ω–µ —É–¥–∞–ª–æ—Å—å –∑–∞–≥—Ä—É–∑–∏—Ç—å –¥–∞–Ω–Ω—ã–µ
          console.error('–û—à–∏–±–∫–∞ –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ –º–∞—Ä–∫–µ—Ä–æ–≤:', error);
        }
      }
      
      // –ó–∞–ø—É—Å–∫–∞–µ–º –∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—é –∫–∞—Ä—Ç—ã –ø–æ—Å–ª–µ –∑–∞–≥—Ä—É–∑–∫–∏ —Å—Ç—Ä–∞–Ω–∏—Ü—ã
      // –ü—Ä–æ–≤–µ—Ä—è–µ–º –≥–æ—Ç–æ–≤–Ω–æ—Å—Ç—å –¥–æ–∫—É–º–µ–Ω—Ç–∞
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initializeMap);
      } else {
        // –ï—Å–ª–∏ —Å—Ç—Ä–∞–Ω–∏—Ü–∞ —É–∂–µ –∑–∞–≥—Ä—É–∂–µ–Ω–∞, –∑–∞–ø—É—Å–∫–∞–µ–º —Å—Ä–∞–∑—É
        initializeMap();
      }
    </script>

