// –§—É–Ω–∫—Ü–∏—è –¥–ª—è –ø–æ–ª—É—á–µ–Ω–∏—è —Å—Å—ã–ª–∫–∏ –Ω–∞ –∑–∞–ø–∏—Å—å –∏–ª–∏ –ø—Ä–æ—Ñ–∏–ª—å
function getEntryLink(point: Point): string {
  // –ï—Å–ª–∏ —É –∑–∞–ø–∏—Å–∏ –µ—Å—Ç—å —Å—Å—ã–ª–∫–∞ –Ω–∞ –∑–∞–ø–∏—Å—å (—Ñ–æ—Ä–º–∞—Ç https://corpus.prozhito.org/note/{number})
  if (point.author_link && point.author_link.includes('/note/')) {
    return point.author_link;
  }
  // –ï—Å–ª–∏ —ç—Ç–æ —Å—Å—ã–ª–∫–∞ –Ω–∞ –ø—Ä–æ—Ñ–∏–ª—å (—Ñ–æ—Ä–º–∞—Ç https://corpus.prozhito.org/person/{number})
  if (point.author_link && point.author_link.includes('/person/')) {
    return point.author_link;
  }
  // –ü–æ —É–º–æ–ª—á–∞–Ω–∏—é –≤–æ–∑–≤—Ä–∞—â–∞–µ–º author_link
  return point.author_link;
}

// –§—É–Ω–∫—Ü–∏—è –∑–∞–≥—Ä—É–∑–∫–∏ –∏ –≥—Ä—É–ø–ø–∏—Ä–æ–≤–∫–∏ –¥–∞–Ω–Ω—ã—Ö –ø–æ –∞–≤—Ç–æ—Ä–∞–º
// –ò—Å–ø–æ–ª—å–∑—É–µ–º readFileSync –¥–ª—è —á—Ç–µ–Ω–∏—è –≤–æ –≤—Ä–µ–º—è —Å–±–æ—Ä–∫–∏ –ø—Ä–æ–µ–∫—Ç–∞
function getAllSourcesData() {
  try {
    // –§–æ—Ä–º–∏—Ä—É–µ–º –ø—É—Ç—å –∫ JSON —Ñ–∞–π–ª—É —Å –¥–∞–Ω–Ω—ã–º–∏
    const dataPath = join(process.cwd(), 'public', 'data', 'points.json');
    const fileContent = readFileSync(dataPath, 'utf-8');
    const data: DataFile = JSON.parse(fileContent);
    
    // –°–æ–∑–¥–∞–µ–º Map –¥–ª—è –≥—Ä—É–ø–ø–∏—Ä–æ–≤–∫–∏ –∑–∞–ø–∏—Å–µ–π –ø–æ –∞–≤—Ç–æ—Ä–∞–º
    const authorMap = new Map<string, {
      author: string;
      points: Point[];
    }>();
    
    if (data.points && Array.isArray(data.points)) {
      // –ü—Ä–æ—Ö–æ–¥–∏–º –ø–æ –≤—Å–µ–º —Ç–æ—á–∫–∞–º –∏ –≥—Ä—É–ø–ø–∏—Ä—É–µ–º –∏—Ö –ø–æ –∞–≤—Ç–æ—Ä—É
      data.points.forEach(point => {
        if (!authorMap.has(point.author)) {
          // –ï—Å–ª–∏ –∞–≤—Ç–æ—Ä –≤—Å—Ç—Ä–µ—á–∞–µ—Ç—Å—è –≤–ø–µ—Ä–≤—ã–µ, —Å–æ–∑–¥–∞–µ–º –¥–ª—è –Ω–µ–≥–æ –∑–∞–ø–∏—Å—å
          authorMap.set(point.author, {
            author: point.author,
            points: []
          });
        }
        // –î–æ–±–∞–≤–ª—è–µ–º –∑–∞–ø–∏—Å—å –∫ –º–∞—Å—Å–∏–≤—É –∑–∞–ø–∏—Å–µ–π –∞–≤—Ç–æ—Ä–∞
        authorMap.get(point.author)!.points.push(point);
      });
    }
    
    // –ü—Ä–µ–æ–±—Ä–∞–∑—É–µ–º Map –≤ –º–∞—Å—Å–∏–≤ –¥–ª—è —É–¥–æ–±—Å—Ç–≤–∞ —Ä–∞–±–æ—Ç—ã –≤ —à–∞–±–ª–æ–Ω–µ
    return Array.from(authorMap.values());
  } catch (error) {
    console.error('–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –¥–∞–Ω–Ω—ã—Ö:', error);
    return [];
  }
}

// –ó–∞–≥—Ä—É–∂–∞–µ–º –¥–∞–Ω–Ω—ã–µ
